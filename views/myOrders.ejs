<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders</title>
    <link rel="icon" type="image/png" href="/images/logo.png">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com/3.4.5"></script>
</head>

<body class="bg-gray-50 font-sans">

    <!-- Navbar -->
    <nav class="bg-white border-b border-gray-200 shadow-sm">
        <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div>
                    <a href="/" class="text-lg font-semibold text-gray-900">Kesh Vibe</a>
                </div>
                <a href="/" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700">
                    <i class="fas fa-shopping-cart mr-2"></i>Continue Shopping
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <h1 class="text-2xl font-semibold text-gray-900 mb-6">My Orders</h1>

        <!-- Orders List -->
        <div class="space-y-6">
            <% if (orders.length === 0) { %>
              <p class="text-center text-gray-500 text-lg font-medium">No orders placed yet.</p>
            <% } else { %>
              <% for (let i = 0; i < orders.length; i++) { %>
                <div class="bg-white shadow-md rounded-lg overflow-hidden p-6 transition duration-300 hover:shadow-lg">
                  <!-- Header -->
                  <div class="flex justify-between items-center border-b pb-4">
                    <div>
                      <span class="text-sm text-gray-500">Order ID:</span>
                      <span class="ml-2 text-sm font-semibold text-gray-800"><%= orders[i]._id %></span>
                    </div>
                    <span class="px-3 py-1 text-sm font-medium rounded-full
                      <%= orders[i].status === 'Delivered' ? 'bg-green-100 text-green-800' :
                      orders[i].status === 'Shipped' ? 'bg-blue-100 text-blue-800' :
                      'bg-yellow-100 text-yellow-800' %>">
                      <%= orders[i].status %>
                    </span>
                  </div>
          
                  <!-- Product Details -->
                  <% for (let j = 0; j < orders[i].products.length; j++) { %>
                    <div class="mt-4 flex items-start gap-4">
                      <a href="/this/product/<%= orders[i].products[j].product._id %>">
                        <img src="<%= orders[i].products[j].product.coverPhoto %>" alt="Product Image" class="w-20 h-20 object-cover rounded-lg shadow-sm">
                      </a>
                      <div>
                        <h3 class="text-base font-medium text-gray-800"><%= orders[i].products[j].product.name %></h3>
                        <p class="text-sm text-gray-500">Ordered on: <%= new Date(orders[i].createdAt).toLocaleDateString() %></p>
                      </div>
                      <div class="text-right">
                        <p class="text-sm font-medium text-gray-800">â‚¹<%= orders[i].products[j].product.price %></p>
                        <p class="text-sm text-gray-500">Qty: <%= orders[i].products[j].quantity %></p>
                      </div>
                    </div>
                  <% } %>
          
                  <!-- Buttons -->
                  <div class="mt-6 flex items-center justify-between">
                    <div class="flex gap-4">
                      <button class="px-4 py-2 text-sm font-medium text-gray-600 border border-gray-300 rounded-lg hover:bg-gray-200">
                        <i class="fas fa-headset mr-2"></i> Need Help?
                      </button>
                      <a href="/get/receipt/<%= orders[i]._id %>" target="_blank">
                        <button class="px-4 py-2 text-sm font-medium text-gray-600 border border-gray-300 rounded-lg hover:bg-gray-200">
                          <i class="fas fa-download mr-2"></i> Download Receipt
                        </button>
                      </a>
                      <% if (orders[i].status === "Shipped") { %>
                        <button onclick="trackOrder('<%= orders[i]._id %>')"
                          class="px-4 py-2 text-sm font-medium text-blue-600 border border-blue-600 rounded-lg hover:bg-blue-600 hover:text-white">
                          <i class="fas fa-truck mr-2"></i> Track Order
                        </button>
                      <% } %>
                    </div>
                    <button onclick="viewOrderDetails('<%= orders[i]._id %>')" 
                      class="px-4 py-2 text-sm font-medium bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                      View Details
                    </button>
                  </div>
                </div>
              <% } %>
            <% } %>
          </div>
          
    </main>

    <script>
        function trackOrder(orderId) {
            alert("Tracking order: " + orderId);
            // Ideally, redirect to the tracking page
            window.location.href = "/track-order/" + orderId;
        }
    </script>
<script src="/js/security.js" ></script>
</body>
</html>
