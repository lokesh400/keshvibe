<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">

    <h2 class="text-center">Add New Product</h2>

    <form action="/add-product" method="POST" enctype="multipart/form-data" class="mt-4">
        <div class="mb-3">
            <label class="form-label">Product Name</label>
            <input type="text" name="name" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Category</label>
            <input type="text" name="category" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="number" name="price" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Stock</label>
            <input type="number" name="stock" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Available Sizes</label>
            <input type="text" name="sizes" class="form-control" placeholder="Enter sizes separated by commas (e.g., S, M, L, XL)">
            <small class="text-muted">Example: S, M, L, XL</small>
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea name="description" class="form-control"></textarea>
        </div>

        <!-- Image Upload Section -->
        <div class="mb-3">
            <label class="form-label">Cover Photo</label>
            <input type="file" name="file" class="form-control" accept="image/*" id="imageInput">
        </div>

        <!-- Image Preview -->
        <div class="mb-3 text-center">
            <img id="imagePreview" src="https://via.placeholder.com/150" class="img-thumbnail" style="max-width: 200px;">
        </div>

        <button type="submit" class="btn btn-primary">Add Product</button>
    </form>

    <script>
        // Image preview function
        document.getElementById("imageInput").addEventListener("change", function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById("imagePreview").src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>

</body>
</html>
