<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: white;
        }
        .form-card {
            background: #f8f9fa;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .btn-primary {
            background: #007bff;
            border: none;
            transition: background-color 0.3s ease;
        }
        .btn-primary:hover {
            background: #0056b3;
        }
        .img-thumbnail {
            border: none;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }
        .form-label {
            font-weight: bold;
        }
        .text-muted {
            font-size: 0.9rem;
        }
    </style>
</head>
<body class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-card">
                <h2 class="text-center mb-4">Add New Product</h2>

                <form action="/add-product" method="POST" enctype="multipart/form-data">
                    <!-- Row 1: Product Name and Category -->
                    <div class="row">
                        <div class="col-12 col-md-6 mb-3">
                            <label class="form-label">Product Name</label>
                            <input type="text" name="name" class="form-control" placeholder="Enter product name" required>
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label class="form-label">Category</label>
                            <input type="text" name="category" class="form-control" placeholder="Enter category" required>
                        </div>
                    </div>

                    <!-- Row 2: Price and Stock -->
                    <div class="row">
                        <div class="col-12 col-md-6 mb-3">
                            <label class="form-label">Price</label>
                            <input type="number" name="price" class="form-control" placeholder="Enter price" required>
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label class="form-label">Stock</label>
                            <input type="number" name="stock" class="form-control" placeholder="Enter stock quantity" required>
                        </div>
                    </div>

                    <!-- Row 3: Made For & Available Sizes -->
                    <div class="row">
                        <div class="col-12 col-md-6 mb-3">
                            <label class="form-label">Made For</label>
                            <select name="madeFor" class="form-control" required>
                                <option value="">Select</option>
                                <option value="Men">Men</option>
                                <option value="Women">Women</option>
                                <option value="Kids">Kids</option>
                            </select>
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label class="form-label">Available Sizes</label>
                            <input type="text" name="sizes" class="form-control" placeholder="S, M, L, XL">
                            <small class="text-muted">Separate sizes with commas (e.g., S, M, L, XL)</small>
                        </div>
                    </div>

                    <!-- Row 4: Keywords -->
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label">Keywords</label>
                            <input type="text" name="keywords" class="form-control" placeholder="e.g., summer, casual, cotton">
                            <small class="text-muted">Enter keywords separated by commas (e.g., summer, casual, cotton)</small>
                        </div>
                    </div>

                    <!-- Row 5: Description -->
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label">Description</label>
                            <textarea name="description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
                        </div>
                    </div>

                    <!-- Row 6: Image Upload -->
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label">Cover Photo</label>
                            <input type="file" name="file" class="form-control" accept="image/*" id="imageInput">
                        </div>
                    </div>

                    <!-- Row 7: Image Preview -->
                    <div class="row">
                        <div class="col-12 text-center mb-3">
                            <img id="imagePreview" src="https://via.placeholder.com/200" class="img-thumbnail rounded" alt="Image Preview" style="max-width: 200px;">
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary w-100">Add Product</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Image preview function
        document.getElementById("imageInput").addEventListener("change", function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById("imagePreview").src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>

</body>
</html>
